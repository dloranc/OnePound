<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="loranc.dawid.onepound.MainActivity">

    <EditText
        android:id="@+id/phone_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="30dp"
        android:hint="Enter phone number here"/>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Save phone number"
        android:id="@+id/save_phone_number"
        android:layout_below="@+id/phone_number"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textAlignment="gravity"/>

    <TextView
        android:layout_below="@+id/save_phone_number"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/current_rate"
        android:minHeight="30dp"
        android:gravity="fill_horizontal"/>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Send SMS"
        android:id="@+id/send_sms_button"
        android:layout_below="@+id/current_rate"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textAlignment="gravity"/>
</RelativeLayout>
